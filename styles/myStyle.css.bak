@import url('https://fonts.googleapis.com/css2?family=Varela+Round&display=swap');

body {
	font-family: 'Varela Round', sans-serif;
    background-color: #1720ae;
}

iframe {
    border: 0;
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
}

#gameArea {
    overflow: hidden;
    position: relative;
    height: 80vh;
    width: 90vw;
    margin: 0 auto;
}

.hide {
    display: none;
}

header {
    background-color: #ffffff;
    width: 100%;
    height: 50px;
    position: relative;
    direction: rtl;
    display: block;
    direction: rtl;
    z-index: 3;
}

    /*כותרת משחק*/
    header > a > p {
        font-family: 'Varela Round';
        font-size: 12pt;
        font-weight: 600;
        position: relative;
        top: -10px;
        color: #1720ae;
        display: inline-block;
        direction: rtl;
    }

/*לוגו*/
#logo {
    width: 35px;
    height: 35px;
    padding: 0px 0px;
    direction: rtl;
padding: 5px 10px;

}

nav {
    margin-top: -70px;
    margin-left: 10px;
    direction: rtl;
}

    nav ul {
        list-style: none;
        direction: rtl;
    }

        nav ul li {
            display: inline-block;
            float: left;
            direction: rtl;
        }

            nav ul li a {
                display: block;
                color: rgb(30, 104, 177);
                text-align: center;
                padding: 10px 10px;
                font-weight: 400;
                font-size: 12pt;
                font-family: 'Varela Round';
                /*         font-family: 'Assistant', sans-serif;*/
                direction: rtl;
                text-decoration: none;
            }

                nav ul li a:hover {
                    font-weight: 600;
                    cursor: pointer;
                /*    font-family: 'Assistant', sans-serif;*/
                    direction: rtl;
                    text-decoration: none;
                }





